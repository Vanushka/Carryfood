.basket-block
  margin 0 auto
  max-width 1222px
  .bread-crumbs
    margin-top 20px
    margin-left 60px
    a
      color $darkgrey
      font-size 13px
      font-family 'Roboto-Medium'
      &:hover
        text-decoration underline
    span
      margin-left 10px
      margin-right 10px
      color $darkgrey
      font-size 13px
      font-family 'Roboto-Medium'
  .basket-filter
    margin-top 50px
    text-align center
    h1
      color $darkgrey
      font-size 35px
      font-family 'OpenSans-Bold'
      letter-spacing 2px
      text-transform uppercase
  .filter-line
    margin-bottom 20px
    display flex
    justify-content space-between
    a.criterias-button
      font-size 13px
      font-family 'Roboto-Bold'
      color $darkgrey
      padding 12px 20px
      text-align center
      border-radius 10px
      background $filtergrey
      border 1px solid $filtergrey
      span
        position absolute
        margin-left -25px
      &:hover
        background $white
        border 1px solid $filtergrey
    .sorts-block
      display flex
      margin-top 27px
      margin-right 30px
      p
        margin 0
        color $hashtaggrey
        font-size 13px
        margin-right 20px
        font-family 'Roboto-Medium'
      a
        color $green
        font-size 13px
        margin-right 20px
        font-family 'Roboto-Regular'
        text-decoration underline
        &:hover
          text-decoration none
      a.active
        cursor text
        font-size 13px
        color $darkgrey
        text-decoration none
        font-family 'Roboto-Medium'

.new-basket-food
  max-width 1280px
  margin-top 30px
  margin-bottom 40px
  padding-left 60px
  padding-top 0 !important
  h1
    color $darkgrey
    font-size 20px
    font-family 'Roboto-Bold'
    text-transform uppercase
    margin-top 20px
    margin-bottom 18px
    letter-spacing 2px
  .basket-products
    width 100%
    display flex
    flex-wrap wrap
    .food
      display block
      width 189.37px
      height auto
      min-height 344px
      max-height 280px
      margin-right 6px
      margin-bottom 10px
      border-radius 10px
      border 1px solid $bordergrey
      a
        .food-img
          width 142px
          height 136.5px
          margin 17px auto
          img
            width 100%
        .food-text
          width 160px
          height auto
          min-height 61px
          color $darkgrey
          margin 0 auto
          font-size 15px
          font-family 'PT-Sans-Regular'
          p
            margin 0
            margin-top 25px
            word-wrap break-word
        .food-price-and-unit
          display flex
          align-items center
          justify-content space-between
          .food-price
            min-width 36px
            white-space nowrap
            height 19px
            margin 2px 17px
            p
              margin 0
              color $black
              font-size 17px
              font-family 'OpenSans-Bold'
          .food-unit
            min-width 52px
            white-space nowrap
            height 23px
            margin 8px 17px
            p
              margin 0
              color $lightgrey
              text-align right
              font-size 15px
              margin-top 2px
              font-family 'PT-Sans-Regular'
      .product-count
        display flex
        margin-left auto
        margin-right 11px
        margin-top: 20px
        margin-bottom: 15px
        flex-direction row-reverse
        align-items flex-end
        .minus
          width 27px
          height 26px
          cursor: pointer
          border-radius 8px
          background-color #c4c4c4
          &:hover
            background $darkgrey
          &:before
            content ""
            pointer-events:none
            position absolute
            background #fff
            height 2px
            width 14px
            margin-top 12px
            margin-left 6px
        p
          margin 3px 10px
          font-size 17px
          font-weight 400
          color $darkgrey
          font-family 'OpenSans'
        .plus
          width 27px
          height 26px
          cursor: pointer
          border-radius 8px
          background-color #c4c4c4
          &:hover
            background $darkgrey
          &:after
            content ""
            pointer-events:none
            position absolute
            background #fff
            height 2px
            width 14px
            margin-top 12px
            margin-left 6px
          &:before
            content ""
            pointer-events:none
            position absolute
            background #fff
            height 2px
            width 14px
            margin-top 12px
            transform rotate(90deg)
            margin-left 6px
      &:hover
        border 1px solid $red
