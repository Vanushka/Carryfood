.background-map
  top 0
  z-index 10
  width 100%
  height 100%
  opacity 0.94
  position fixed
  display none
  background-color $backgroundcolor
#popup-map
    top: 10%
    right: 0
    left: 0
    bottom: 10%
    z-index: 10
    width: 100%
    max-height: 777px
    display: none
    overflow: auto
    position: fixed
    margin: 0 auto
    box-shadow: 0 3px 6px rgba(0,0,0,0.16)
    border-radius: 20px
    background-color: #fff
  .close
    position relative
    float right
    right 22px
    top 20px
    width 24px
    height 18px
    opacity 0.3
    &:hover
      cursor pointer
      opacity 1
    &:before
      position absolute
      left 15px
      content ' '
      height 20px
      width 2px
      background-color #333
      transform rotate(45deg)
    &:after
      transform rotate(-45deg)
      position absolute
      left 15px
      content ' '
      height 20px
      width 2px
      background-color #333
  .delivery-address-popup
    margin-bottom: 85px
    .block-search-address
      width: 930px
      margin: 0 auto
      margin-top: 96px
      p.headline
        margin: 0
        color: $black
        font-size: 45px
        font-family 'OpenSans-Bold'
      p.text
        color: $black
        max-width: 450px
        font-size: 18px
        margin-bottom: 30px
        font-family: 'OpenSans'
      .search-block
        display: flex
        .search
          width 530px
          height 56px
          display flex
          border-radius 30px
          align-content: center
          background: $input-gray
          input
            border 0
            color $black
            width 85%
            font-size 15px
            margin-left: 23px
            border-radius 30px
            background: $input-gray
            font-family 'Open-Sans-Semibold'
            &:focus::-webkit-input-placeholder
              opacity 0
          ::placeholder
            color: $black
            opacity: 1
          .loop
            background url(../img/loop-black.svg) $input-gray no-repeat 97%
            padding-left 37px
            border-radius: 30px
        button
          height: 52px
          color $white
          border: 0
          font-size 13px
          font-weight 700
          margin-left: 15px
          white-space: nowrap
          font-family 'OpenSans-Bold'
          background $red
          border-radius 8px
          padding 11px 35px
      a
        width: max-content
        cursor: pointer
        color #379af1
        font-size 14px
        font-weight 400
        display block
        margin-top 15px
        font-family 'OpenSans'
        text-decoration underline
  #mapPopup
    width: 100%
    max-width: 100%
    min-height: 565px
