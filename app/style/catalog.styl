.filter-block
  margin 0 auto
  max-width 1222px
  .bread-crumbs
    margin-top 20px
    margin-left 60px
    a
      color $darkgrey
      font-size 13px
      font-family 'Roboto-Medium'
      &:hover
        text-decoration underline
    span
      margin-left 10px
      margin-right 10px
      color $darkgrey
      font-size 13px
      font-family 'Roboto-Medium'
  .filter
    margin-top 50px
    text-align center
    h1
      color $darkgrey
      font-size 35px
      font-family 'OpenSans-Bold'
      letter-spacing 2px
    .hashtags
      display flex
      margin-bottom 70px
      justify-content center
      .hashtag
        height 22px
        cursor pointer
        padding 5px 20px
        border-radius 13px
        margin-right 10px
        font-size 15px
        font-family 'Roboto-Regular'
        border 1px solid $hashtaggrey
        a
          padding-right 15px
          color $hashtaggrey
          .close
            position relative
            float right
            right 10px
            top 3px
            width 2px
            height 2px
            opacity 0.3
            &:hover
              opacity 1
            &:before
              position absolute
              left 15px
              content ' '
              height 15px
              width 2px
              background-color #333
              transform rotate(45deg)
            &:after
              transform rotate(-45deg)
              position absolute
              left 15px
              content ' '
              height 15px
              width 2px
              background-color #333
        &:hover
          background $red
          .close
            &:after, &:before
              background $white
          a
            color $white
      .active
        background $red
        a
          color $white
          .close
            &:after, &:before
              background $white
  .filter-line
    margin-bottom 20px
    display flex
    justify-content space-between
    a.filter-button
      font-size 13px
      font-family 'Roboto-Bold'
      color $darkgrey
      width 85px
      height 28px
      padding-left 17px
      padding-top 11px
      text-align center
      border-radius 10px
      background $filtergrey
      border 1px solid $filtergrey
      span
        position absolute
        margin-left -25px
      &:hover
        background $white
        border 1px solid $filtergrey
    .sorts-block
      display flex
      margin-top 27px
      margin-right 30px
      p
        margin 0
        color $hashtaggrey
        font-size 13px
        margin-right 20px
        font-family 'Roboto-Medium'
      a
        color $green
        font-size 13px
        margin-right 20px
        font-family 'Roboto-Regular'
        text-decoration underline
        &:hover
          text-decoration none
      a.active
        cursor text
        font-size 13px
        color $darkgrey
        text-decoration none
        font-family 'Roboto-Medium'
.filter-food
  max-width 1280px
  margin-top 30px
  margin-bottom 40px
  padding-left 60px
  padding-top 0 !important
  h1
  #filterProducts
    width 100%
    display flex
    flex-wrap wrap
    .food
      display block
      width 189.37px
      height 280px
      margin-right 6px
      margin-bottom 10px
      border-radius 10px
      border 1px solid $bordergrey
      a
        .food-img
          width 142px
          height 136.5px
          margin 17px auto
          img
            width 100%
        .food-text
          width 160px
          height 61px
          color $darkgrey
          margin 0 auto
          font-size 15px
          font-family 'PT-Sans-Regular'
          p
            margin 0
            margin-top 30px
            word-wrap break-word
        .food-price-and-unit
          display flex
          justify-content space-between
          .food-price
            width 36px
            height 19px
            margin 2px 17px
            p
              margin 0
              color $black
              font-size 14px
              font-family 'OpenSans-Bold'
          .food-unit
            width 52px
            height 23px
            margin 2px 17px
            p
              margin 0
              color $lightgrey
              text-align right
              font-size 13px
              margin-top 2px
              font-family 'PT-Sans-Regular'
      &:hover
        border 1px solid $red
.filter-food-mobile
