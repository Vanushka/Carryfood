// ---> COLOR
$green           = #1CCC8F
$lightgreen      = #50CEAA
$grey            = #BCBCBC
$bordergrey      = #DEDEDE
$darkgrey        = #4A4A4A
$linegrey        = #555555
$addressgrey     = #797979
$linkgrey        = #9d9d9d
$backgroundgrey  = #F6F6F5
$customergray    = #EFEFED
$hashtaggrey     = #A5A5A5
$lightgrey       = #AFAFAF
$filtergrey      = #F0ECE8
$black           = #000000
$white           = #ffffff

// --MAIN-STYLE--
html, body
  margin 0
  min-width 1295px
  a, button, input, select, option
    outline none
    text-decoration none

// -- HEADER --
header
  width 100%
  height 130px
  background $green
  #header
    display flex
    justify-content center
    .container
      padding-top 20px
      display flex
      justify-content center
      max-width 1280px
      .logo
        color $white
        font-size 12px
      span
        color $white
        margin 18px 15px
        font-family 'PT-Sans-Italic'
      .choose-shop
        cursor pointer
        margin-right 10px
        select
          height 58px
          width 130px
          color $white
          font-size 25px
          padding-left 10px
          background none
          border 1px solid $white
          appearance none
          -moz-appearance none
          -webkit-appearance none
      .search-line
        display inline-block
        input
          border 0
          color $black
          width 505px
          height 56px
          font-size 15px
          font-family 'Open-Sans-Semibold'
          border-radius 30px
        input[type="text"]
          padding-left 25px
          margin-bottom 15px
        .search-menu
          a
            color $white
            margin-right 33px
            font-size 13px
            font-family 'Roboto-Regular'
      .radius-link
        width 30px
        height 30px
        margin-top 13px
        cursor pointer
        margin-left 10px
        border-radius 30px
        background-color $white
      .time-of-delivery
        cursor pointer
        margin-left 10px
        select
          height 58px
          width 180px
          color $white
          font-size 25px
          padding-left 10px
          font-size 16px
          background none
          white-space normal
          border 1px solid $white
          appearance none
          -moz-appearance none
          -webkit-appearance none
      .basket
        display inline-block
        margin-left 10px
        margin-top 18px
        a
          padding 17px 55px
          border-radius 5px
          color $white
          font-size 16px
          padding-left 10px
          font-family 'Roboto-Regular'
          border 1px solid $white
        .phone
          display block
          margin-top 29px
          margin-left -5px
          a
            border 0
            padding 0
            color $white
            font-size 17px
            font-family 'Roboto-Bold'

// -- BODY--
// -- SLIDER-PRESENT--

#slider-present
  width 100%
  height 240px
  background $black
  .slider-content
    h1
      color $white

// --GOODS-SLIDER--
.container
  margin 0 auto
  max-width 1280px
.goods
  margin-top 30px
  margin-bottom 40px
  padding-left 60px
  h1
    color $darkgrey
    font-size 20px
    font-family 'Roboto-Bold'
    text-transform uppercase
    margin-bottom 18px
    span
      color $grey
      margin-left 15px
      font-size 16px
      font-family 'Roboto-Medium'
  #goods-slider
    width 100%
    display flex
    overflow overlay
    .good
      display block
      width 158.12px
      height 190.8px
      margin-right 6px
      border-radius 10px
      border 1px solid $bordergrey
      a
        .good-img
          width 62.33px
          height 60.18px
          margin 17px auto
          img
            width 100%
        .good-text
          width 125.12px
          height 61px
          color $darkgrey
          margin 0 auto
          font-size 13px
          font-family 'PT-Sans-Regular'
          p
            margin 0
            word-wrap break-word
        .good-price-and-unit
          display flex
          justify-content space-between
          .good-price
            width 36px
            height 19px
            margin 2px 17px
            p
              margin 0
              color $black
              font-size 14px
              font-family 'OpenSans-Bold'
          .good-unit
            width 52px
            height 23px
            margin 2px 17px
            p
              margin 0
              color $lightgrey
              text-align right
              font-size 13px
              font-family 'PT-Sans-Regular'
