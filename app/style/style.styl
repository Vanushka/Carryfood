$input-gray      = #E5E5E5


hsla(0, 0%, 100%, 0.31)

// --MAIN-STYLE--
html
  margin 0
.locked
  overflow: hidden
html, body
  margin 0
  min-width 1295px
  // background $backgroundgrey
  a, button, input, select, option
    outline none
    text-decoration none
    cursor pointer
input, textarea
  &:focus::-webkit-input-placeholder
    opacity 0

body option
  color $black
// -- HEADER --
header
  width 100%
  height 130px
  background $green
  position: relative
  #header
    display flex
    justify-content center
    .container
      padding-top 20px
      display flex
      justify-content center
      max-width 1280px
      .logo
        color $white
        font-size 12px
      .logo-mobile
        display none
      .navBurger, .overlay
        display none
      span.is
        color $white
        margin 18px 15px
        font-family 'PT-Sans-Italic'
      .group-select
        display flex
        .choose-shop
          cursor pointer
          margin-right 10px
          margin-left: 56px
          // background url("../img/metro.svg") no-repeat left
          .choose-shop-menu
            height 45px
            width 130px
            color $white
            display block
            padding-top 11px
            font-size 25px
            border-radius 8px
            background none
            border 1px solid hsla(0, 0%, 100%, 0.31)
            appearance none
            -moz-appearance none
            -webkit-appearance none
            .choose-shop-down
              float right
              margin-top -7px
              img
                margin-right 30px
          span
            background url("../img/strelka-down.svg") 92%/7% no-repeat
          .permalink
            display: block
            color: #4F6B72
            text-decoration: none
            margin: 10px 0
            &:hover
              text-decoration: underline
          ul, li
            margin: 0
            padding: 0
          .choose-shop-menu a, .choose-shop-down, .choose-shop-menu-sub .title
            text-decoration: none
            color: #555555
            padding: 10px
          .drop-menu-main
            padding: 4px
            height: 20px
            position: relative
            li
              float: left
              margin-right: 40px
          .choose-shop-menu-sub
            display: none
            position: absolute
            background: $green
            border-radius: 6px
            border: 1px solid rgba(255,255,255,0.31)
            z-index: 100
            width: 130px
            padding: 5px 0 5px
            margin: 50px 0 0 0px
            a
              color: #555555
              display: block
              font-size: 11px
              padding: 6px 15px
              margin-top 10px
              cursor: pointer
              text-decoration: none
              &:hover
                background: #155FB0
                color: #FFFFFF
                text-decoration: none
            .title
              display: block
              padding: 6px 15px
              cursor: pointer
              border-bottom: 1px solid rgba(255,255,255,0.31)
          li
            list-style: none
            display: block
          .drop-down
            cursor: pointer
          span.arrow
            font-size: 8px

        .search-line
          width 568px
          height 56px
          display flex
          align-items: center
          background: $white
          border-radius 30px
          input
            border 0
            color $black
            width 90%
            height 50px
            font-size 15px
            margin-left: 23px
            font-family 'Open-Sans-Semibold'
          .loop
            width: 10px
            height: 100%
            cursor: pointer
            background url(../img/loop.svg) $white no-repeat 97%
            padding-left 25px
            border-radius: 30px
            margin-right: 18px
          .search-menu
            margin-left: -143px
            bottom: 15px
            display: flex
            position: absolute
            align-items: center
            a
              color $white
              margin-right 33px
              font-size 15px
              font-family 'Open-Sans-Semibold'
              &:hover
                text-decoration underline
            .vertial-line
              height: 20px
              width: 1px
              background: $white
              opacity: 0.2
              margin-right: 33px
            .address
              display: flex
              p
                margin: 0
                color: $white
                font-size: 15px
                font-family: 'OpenSans'
              a
                opacity: 1
                color: $white
                cursor: pointer
                font-size: 15px
                margin-left: 10px
                font-family: 'OpenSans'
                text-decoration: underline
        .radius-link
          width 30px
          height 30px
          margin-top 13px
          cursor pointer
          margin-left 10px
          border-radius 30px
          background-color $white
        .time-of-delivery
          cursor pointer
          margin-left 10px
          select
            height 58px
            width 180px
            color $white
            font-size 25px
            border-radius 8px
            padding-left 10px
            font-size 16px
            background none
            white-space normal
            font-family: 'PT-Sans-Regular'
            border 1px solid hsla(0, 0%, 100%, 0.31)
            appearance none
            -moz-appearance none
            -webkit-appearance none
            background url("../img/strelka-down.svg") 92%/5% no-repeat
        .column-block
          a.basket
            height 37px
            cursor pointer
            display inline-block
            padding-top 18px
            margin-left 10px
            margin-top 0
            border-radius 5px
            border 1px solid hsla(0, 0%, 100%, 0.31)
            img
              margin-top -3px
              margin-left 10px
              position absolute
            span
              color $white
              width 18px
              position absolute
              padding-left 3px
              margin-top -3px
              margin-left 21px
              font-size 12px
              font-family 'OpenSans-Bold'
              background $red
              border-radius 10px
            p
              margin: 0
              padding-right: 15px
              padding-left 55px
              color $white
              font-size 15px
              font-family 'PT-Sans-Regular'
          .phone
            display block
            margin-top: 12px
            a
              border 0
              padding 0
              color $white
              font-size 17px
              font-family 'Roboto-Bold'

