// --CUSTOMERS-REVIEWS--
.customer-reviews-background
  width 100%
  background $customergray
  .customer-reviews
    height auto
    margin-top 30px
    padding-top 30px
    padding-left 60px
    padding-bottom 70px
    h1
      margin 0
      color $darkgrey
      font-size 20px
      font-family 'Roboto-Bold'
      text-transform uppercase
      margin-bottom 24px
    #reviews
      display flex
      overflow overlay
      position relative
      .review
        width 440px
        height 210px
        background $white
        border-radius 5px
        margin-right 10px
        box-shadow: 0px 2px 10px $grey
        .review-text
          width 387px
          margin 25px 25px 20px 25px
          p
            word-wrap break-word
            color $darkgrey
            font-size 15px
            font-family 'PT-Sans-Regular'
        .review-data
          bottom 24px
          display flex
          position absolute
          .review-img
            width 47px
            height 47px
            display inline-flex
            margin-left 25px
            img
              width 100%
              border-radius 50px
          .name-and-url
            padding-top 5px
            margin-left 10px
            .name
              p
                margin 0
                color $black
                font-size 14px
                white-space nowrap
                font-family 'OpenSans-Bold'
            .url
              a
                color $lightgreen
                font-size 12px
                text-decoration underline
                font-family 'Open-Sans-Semibold'

//--BLOCK MOBILE APPS--
.block-mobile-apps
  width 100%
  height 220px
  background $green
  .headline
    padding-top 15px
    text-align center
    h1
      color $white
      font-size 25px
      font-family 'OpenSans-Bold'
      text-transform uppercase
    p
      margin-top -8px
      color $white
      font-size 18px
      font-family 'Roboto-Light'
  .google-and-apple
    display flex
    justify-content center
    margin 30px
    margin-bottom 42px
    a
      margin-right 2px
      .google-badge
        width 164.21px
        height 43.3px
        img
          width 100%
    a
      .apple-badge
        width 146.21px
        height 43.3px
        img
          width 100%


//--FOOTER--
footer
  width 100%
  height 327px
  padding-bottom 25px
  background $darkgrey
  .block-footer
    padding-top 42px
    margin-left 58px
  .footer-left
    width 488px
    float left
    a.tel
      color $white
      line-height 2
      font-size 31px
      font-family 'Futura-Bold'
    a.mail
      color $white
      font-size 14px
      font-family 'Roboto-Regular'
      text-decoration underline
    .footer-left-line
      width 100%
      height 2px
      margin-top 115px
      background $linegrey
    .footer-logo-and-address
      display flex
      .footer-logo
        display block
        h1
          color $green
      .address
        margin-left 10px
        p
          color $addressgrey
          font-size 13px
          font-family 'Roboto-Regular'
  .footer-right
    float right
    display flex
    margin-right 122px
    .group-links-questions
      margin-right 50px
      p
        margin 0
        margin-bottom 15px
        color $white
        font-size 14px
        font-family 'Futura-Bold'
        text-transform uppercase
      a
        line-height 1.8
        cursor pointer
        color $linkgrey
        font-size 14px
        font-family 'Roboto-Regular'
    .group-links-partners
      p
        margin 0
        color $white
        font-size 14px
        font-family 'Futura-Bold'
        text-transform uppercase
      a
        line-height 1.8
        cursor pointer
        color $linkgrey
        font-size 14px
        font-family 'Roboto-Regular'
    .payment-systems
      white-space nowrap
      position absolute
      margin-top 230px
      a
        margin-right 10px
        img
          width 50px
          height 30px

