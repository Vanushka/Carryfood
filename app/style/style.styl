              &:after
                transform rotate(-45deg)
                position absolute
                left 7px
                content ' '
                height 15px
                width 2px
                background-color #b2b2b2
          &:hover
            border 1px solid $red
            background $red
            .close
              &:after, &:before
                background $white
            a
              color $white
        .active
          background $red
          a
            color $white
            .close
              &:after, &:before
                background $white
