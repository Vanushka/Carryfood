//--INDEX2--

#smart-list
  background $backgroundgrey
  .smart.container
    margin 0 auto
    max-width 1280px
    padding-bottom 10px
    .hashtags
      display flex
      margin-bottom 15px
      justify-content space-between
      .group-hashtags
        display flex
        .hashtag
          height 20px
          cursor pointer
          padding 6px 10px
          border-radius 13px
          margin-right 10px
          font-size 15px
          font-family 'Roboto-Regular'
          border 1px solid $hashtaggrey
          a
            text-transform uppercase
            padding-right 25px
            color $hashtaggrey
            .close
              position relative
              float right
              right 20px
              top 3px
              width 2px
              height 2px
              opacity 0.3
              &:hover
                opacity 1
              &:before
                position absolute
                left 15px
                content ' '
                height 15px
                width 2px
                background-color #333
                transform rotate(45deg)
              &:after
                transform rotate(-45deg)
                position absolute
                left 15px
                content ' '
                height 15px
                width 2px
                background-color #333
          &:hover
            background $red
            .close
              &:after, &:before
                background $white
            a
              color $white
        .active
          background $red
          a
            color $white
            .close
              &:after, &:before
                background $white
      .smart-search
        color $white
        padding 10px
        border-radius 8px
        background-color $red
        font-size 15px
        text-transform uppercase
        font-family 'PT-Sans-Regular'
        letter-spacing 1.1px

    #smartSlider
      width 104%
      display flex
      position relative
      .good
        display block
        width 158.12px
        height 190.8px
        margin-right 6px
        border-radius 10px
        background $white
        border 1px solid $white
        a
          .good-img
            width 62.33px
            height 60.18px
            margin 17px auto
            img
              width 100%
          .good-text
            width 125.12px
            height 61px
            color $darkgrey
            margin 0 auto
            font-size 13px
            font-family 'PT-Sans-Regular'
            p
              margin 0 8px
              word-wrap break-word
          .good-price-and-unit
            display flex
            justify-content space-between
            .good-price
              width 36px
              height 19px
              margin 2px 17px
              p
                margin 0
                color $black
                font-size 14px
                font-family 'OpenSans-Bold'
            .good-unit
              width 52px
              height 23px
              margin 2px 17px
              p
                margin 0
                color $lightgrey
                text-align right
                font-size 13px
                margin-top 3px
                font-family 'PT-Sans-Regular'
        &:hover
          border 1px solid $red

    .button-hide
      z-index 2
      display flex
      margin-top 10px
      position relative
      a
        margin 0 auto
        color $darkgrey
        font-size 13px
        font-family 'Roboto-Bold'
  .line-gradient
    width 100%
