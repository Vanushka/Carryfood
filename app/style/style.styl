// ---> COLOR
$green           = #1CCC8F
$lightgreen      = #50CEAA
$grey            = #BCBCBC
$bordergrey      = #DEDEDE
$darkgrey        = #4A4A4A
$linegrey        = #555555
$addressgrey     = #797979
$linkgrey        = #9d9d9d
$backgroundgrey  = #F6F6F5
$customergray    = #EFEFED
$hashtaggrey     = #A5A5A5
$lightgrey       = #AFAFAF
$filtergrey      = #F0ECE8
$black           = #000000
$white           = #ffffff
$red             = #ff174c
$backgroundcolor = #e5e3e0
$linehorizontal  = #707070


hsla(0, 0%, 100%, 0.31)

// --MAIN-STYLE--
html
  margin 0

html, body
  margin 0
  min-width 1295px
  a, button, input, select, option
    outline none
    text-decoration none
    cursor pointer

// -- HEADER --
header
  width 100%
  height 130px
  background $green
  #header
    display flex
    justify-content center
    .container
      padding-top 20px
      display flex
      justify-content center
      max-width 1280px
      .logo
        color $white
        font-size 12px
      span
        color $white
        margin 18px 15px
        font-family 'PT-Sans-Italic'
      .choose-shop
        cursor pointer
        margin-right 10px
        // background url("../img/metro.svg") no-repeat left
        select
          height 58px
          width 130px
          color $white
          font-size 25px
          border-radius 8px
          background none
          border 1px solid hsla(0, 0%, 100%, 0.31)
          appearance none
          -moz-appearance none
          -webkit-appearance none
          background url("../img/strelka-down.svg") 92%/7% no-repeat
        select#shop option[value="metro"] { background-image:url(../img/metro.svg);   }
      .search-line
        display inline-block
        input
          border 0
          color $black
          width 505px
          height 56px
          font-size 15px
          font-family 'Open-Sans-Semibold'
          // background url(../img/loop.svg) no-repeat center right
          border-radius 30px
        input[type="text"]
          background url(../img/loop.svg) $white no-repeat 97%
          padding-left 25px
          margin-bottom 15px
        input
          &:focus::-webkit-input-placeholder
            opacity 0
        .search-menu
          a
            color $white
            margin-right 33px
            font-size 13px
            font-family 'Roboto-Regular'
            &:hover
              text-decoration underline
      .radius-link
        width 30px
        height 30px
        margin-top 13px
        cursor pointer
        margin-left 10px
        border-radius 30px
        background-color $white
      .time-of-delivery
        cursor pointer
        margin-left 10px
        select
          height 58px
          width 180px
          color $white
          font-size 25px
          border-radius 8px
          padding-left 10px
          font-size 16px
          background none
          white-space normal
          border 1px solid hsla(0, 0%, 100%, 0.31)
          appearance none
          -moz-appearance none
          -webkit-appearance none
          background url("../img/strelka-down.svg") 92%/5% no-repeat
      .basket
        height 37px
        cursor pointer
        display inline-block
        padding-top 18px
        margin-left 10px
        margin-top 0
        border-radius 5px
        border 1px solid hsla(0, 0%, 100%, 0.31)
        img
          margin-top -3px
          margin-left 10px
          position absolute
        span
          color $white
          width 18px
          position absolute
          padding-left 3px
          margin-top -3px
          margin-left 21px
          font-size 12px
          font-family 'PT-Sans-Regular'
          background $red
          border-radius 10px
        a
          padding-left 55px
          color $white
          font-size 16px
          font-family 'Roboto-Regular'
        .phone
          display block
          margin-top 29px
          margin-left -5px
          a
            border 0
            padding 0
            color $white
            font-size 17px
            font-family 'Roboto-Bold'

// -- BODY--
// -- SLIDER-PRESENT--

#slider-present
  .slide-present
    height 240px
    margin 0 auto
    background url("../img/slide-present-background.svg")
    display flex
    justify-content center
    img
      width 100%
      opacity 0.08
      max-height 240px
      -webkit-filter blur(5px)
      -moz-filter blur(5px)
      -o-filter blur(5px)
      -ms-filter blur(5px)
      filter blur(5px)
    .slider-content
      margin-top 30px
      position absolute
      text-align center
      h1
        color $white
        font-family 'Open-Sans-Semibold'
        font-size 35px
        font-weight 700
        text-transform uppercase
        letter-spacing 3.5px
      p
        width 278px
        height 65px
        opacity 0.8
        color $white
        font-family Roboto
        font-size 18px
        font-weight 300
        margin 0 auto
// --FOR-SLIDER--
.prev-head-slider
  cursor pointer
  img
    top 50%
    z-index 2
    width 22px
    height 29px
    margin-left 60px
    display block
    position absolute

.next-head-slider
  cursor pointer
  img
    top 50%
    z-index 2
    right 0
    width 22px
    height 29px
    margin-right 60px
    display block
    position absolute

.slick-dots
  display flex
  margin-top -35px
  justify-content center

.pager
  width 10px
  height 10px
  opacity 0.19
  position absolute
  border-radius 15px
  background-color $white

.slick-active
  .pager
    opacity 1
    border-radius 15px
    background-color $white

ul,li
  list-style-type none
  display inline
  margin-right 20px

