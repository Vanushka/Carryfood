#basket
  width auto
  margin 0 auto
  .basket-part
    margin-top 50px
    margin-bottom 25px
    text-align center
    h1
      color $darkgrey
      font-size 35px
      font-family 'OpenSans-Bold'
      letter-spacing 2px
      text-transform uppercase
      margin-bottom 35px
    .links-profile
      display flex
      justify-content center
      a
        padding 0 20px
        text-transform uppercase
        opacity 0.44
        color $darkgrey
        font-family 'Roboto-Regular'
        font-size 15px
        font-weight 700
        letter-spacing 1.5px
      .active
        opacity 1
  .active
    display block !important
  .basket-section
    display none
    .the-profile
      width 776px
      height max-content
      margin 0 auto
      margin-bottom 175px
      box-shadow 0 6px 6px rgba(0, 0, 0, 0.04)
      border-radius 8px
      background-color $white
      .flex-profile
        display flex
        .main-fields
          margin-left 30px
          .login
            input
              width 296px
              height 40px
              border none
              border-radius 8px
              background-color $backgroundgrey
          .login, .password, .phone
            p
              color $darkgrey
              font-family 'OpenSans-Bold'
              font-size 17px
              font-weight 600
          .password
            margin-top 40px
            input
              margin-bottom 10px
          .phone
            margin-top 40px
          input
            width 296px
            height 40px
            border none
            border-radius 8px
            background-color $white
            border 1px solid $bordergrey
          input[type="text"]
            color $darkgrey
            font-family 'PT-Sans-Regular'
            font-size 15px
            font-weight 400
            padding-left 15px
        .other-fields
          margin-left 90px
          p
            color $darkgrey
            font-family 'OpenSans-Bold'
            font-size 17px
            font-weight 600
          input
            width 296px
            height 40px
            border none
            border-radius 8px
            margin-bottom 10px
            background-color $white
            border 1px solid $bordergrey
          input[type="text"]
            color $darkgrey
            font-family 'PT-Sans-Regular'
            font-size 15px
            font-weight 400
            padding-left 15px
    .basket-inside
      margin-bottom 120px
      .the-sum
        width 612px
        height 74px
        box-shadow 0 6px 6px rgba(0, 0, 0, 0.04)
        border-radius 8px
        background-color #ffffff
        margin 0 auto
        margin-bottom 11px
        display flex
        p.price
          margin-top 4%
          margin-left 30px
          color $darkgrey
          font-size: 17px
          font-weight: 600
          font-family 'OpenSans-Bold'
        p.date
          margin-top 4.3%
          margin-left 45px
          color $darkgrey
          font-size 15px
          font-weight 400
          font-family 'PT-Sans-Regular'
        a.repeat
          margin-left auto
          margin-right 32px
          margin-top 5%
          color $darkgrey
          font-size 13px
          font-weight 400
          font-family 'PT-Sans-Regular'
          &:hover
            text-decoration underline
    #products
      .product
        width 582px
        height max-content
        margin 0 auto
        display flex
        box-shadow 0 6px 6px rgba(0, 0, 0, 0.04)
        border-radius 8px
        margin-bottom 5px
        background-color #ffffff
        .product-img
          width 98px
          min-width 98px
          height 94px
          margin-top 22px
          margin-left 22px
          margin-right 24px
          margin-bottom 17px
          img
            width 100%
        .inline-block
          width 100%
          display inline-block
          .product-text
            p
              font-size 17px
              font-weight 700
              color $darkgrey
              font-family 'OpenSans-Bold'
          .product-price-and-unit
            display flex
            .price-and-unit
              .product-unit
                p
                  font-size 15px
                  font-weight 400
                  color $darkgrey
                  margin-top 30px
                  margin-bottom 0
                  font-family 'PT-Sans-Regular'
              .product-price
                p
                  font-size 17px
                  font-weight 700
                  color $darkgrey
                  margin-top 0
                  font-family 'OpenSans-Bold'
            .product-count
              display flex
              margin-left auto
              margin-right 27px
              margin-bottom: 17px;
              flex-direction row-reverse
              align-items flex-end
              a.minus
                width 27px
                height 26px
                border-radius 8px
                background-color #c4c4c4
                &:hover
                  background $darkgrey
                &:before
                  content ""
                  pointer-events:none
                  position absolute
                  background #fff
                  height 2px
                  width 14px
                  margin-top 12px
                  margin-left -50px
              p
                margin 3px 10px
                font-size 17px
                font-weight 400
                color $darkgrey
                font-family 'OpenSans'
              a.plus
                width 27px
                height 26px
                border-radius 8px
                background-color #c4c4c4
                &:hover
                  background $darkgrey
                &:after
                  content ""
                  pointer-events:none
                  position absolute
                  background #fff
                  height 2px
                  width 14px
                  margin-top 12px
                  margin-left 62.8px
                &:before
                  content ""
                  pointer-events:none
                  position absolute
                  background #fff
                  height 2px
                  width 14px
                  margin-top 12px
                  transform rotate(90deg)
                  margin-left 62.8px
    .repeat-order
      margin 33px auto
      text-align center
      a
        color #ffffff
        font-size 13px
        font-weight 700
        font-family 'Roboto-Bold'
        background $red
        border-radius 8px
        padding 11px 25px
.total-order
  text-align center
  margin-top 35px
  p
    color $darkgrey
    font-family 'OpenSans-Bold'
    font-size 17px
    font-weight 700
    span
      color $darkgrey
      font-family 'OpenSans-Bold'
      font-size 17px
      font-weight 700
  .repeat-order
    margin 50px auto
    text-align center
  a
    color #ffffff
    font-size 13px
    font-weight 700
    font-family 'Roboto-Bold'
    background $red
    border-radius 8px
    padding 11px 25px
