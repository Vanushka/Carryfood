doctype html
html
	include include/variables.pug
	include include/header.pug
	body
		.profile-block
			.bread-crumbs 
				a(href="/") Главная
				span 
					img(src="./dist/img/strelka.svg")
				a(href="/basket.html") Корзина
				span 
					img(src="./dist/img/strelka.svg")
			#basket
				.basket-part
					h1 Корзина
				.basket-section.active
					.basket-inside
						#products
							each val in forbasket
								.product 
									.product-img
										img(src=val.img)
									.inline-block
										.product-text
											p= val.text
										.product-price-and-unit
											.price-and-unit
												.product-unit
													p= val.unit
												.product-price
													p= val.price
											.product-count
												a.plus
												p= val.count
												a.minus
						.total-order
							p Итого: <span>12 860 руб.</span>
							.repeat-order
								a Сделать заказ
		.foods-background
			.foods.container
				h1 Вы смотрели
				#foodSlider 
					each val in test
						.food
							a(href="javascript:openProductDetail()")
								.food-img 
									img(src=val.img)
								.food-text
									p= val.text
								.food-price-and-unit
									.food-price
										p= val.price
									.food-unit
										p= val.unit
										
	include include/modal.pug
	include include/login.pug
	include include/reg.pug
	include include/footer.pug
