doctype html
html
  include include/variables.pug
  include include/header.pug
  body
    .profile-block
      .bread-crumbs 
        a(href="/") Главная
        span 
          img(src="./dist/img/strelka.svg")
        a(href="/basket.html") Корзина
        span 
          img(src="./dist/img/strelka.svg")
      #order
        .order-part
          h1 Оформление заказа
        .order-cantainer
          .orders
            .order-details
              .flex-profile
                .main-fields
                  .login
                    p Выбранный адрес
                    input(type="text" placeholder="Ленина проспект, 45")
                  .password
                    p Детали
                    input(type="text" placeholder="Номер квартиры или офиса")
                    br
                    input(type="text" placeholder="Подъезд")
                    br
                    input(type="text" placeholder="Этаж")
                    br
                    input(type="text" placeholder="Код домофона")
                  .comments
                    textarea(type="text" placeholder="Комментарий к заказу")
                  .next
                    a Далее
            .order-other
              p Контакты
            .order-other
              p Замены
            .order-other
              p Оплата
          .order-block
            .inside-block
              h1 Ваш заказ
              .goods-shipping-discount
                .good
                  p.descrip Товары
                  p.prise 12 860 руб.
                .line
                .good
                  p.descrip Доставка
                  p.prise 299 руб.
                .line
                .good
                  p.descrip Скидка
                  p.prise 150 руб.
                .line
              p.price 12 860 руб.
              p.discont -150 руб.
              .total-order
                p Итого: <span>12 710 руб.</span>
              .checkout-order
                a Оформить заказ
            
    .foods-background
      .foods.container
        h1 Вы смотрели
        #foodSlider
          each val in food
            .food
              a(href="javascript:openProductDetail()")
                .food-img 
                  img(src=val.img)
                .food-text
                  p= val.text
                .food-price-and-unit
                  .food-price
                    p= val.price
                  .food-unit
                    p= val.unit
          
  include include/modal.pug
  include include/login.pug
  include include/reg.pug
  include include/footer.pug
