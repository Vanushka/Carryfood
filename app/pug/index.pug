doctype html
html
  include include/variables.pug
  include include/header.pug
  body 
    #slider-present
      .slide-present
        img(src="/dist/img/slider-background.png")
        .slider-content
          h1 БЕСПЛАТНО ПРИВЕЗЕМ 
          p Привезем ваш заказ бесплатно при первом заказе на сайте или в приложении.
      .slide-present
        img(src="/dist/img/slider-background.png")
        .slider-content
          h1 Some text
          p Some text
      .slide-present
        img(src="/dist/img/slider-background.png")
        .slider-content
          h1 Some text 2
          p Some text 2 
    .goods.container
      h1 Товары со скидкой
      #goods-slider   
        each val in food
          .good
            a(href="javascript:openProductDetail()")
              .good-img 
                img(src=val.img)
              .good-text
                p= val.text
              .good-price-and-unit
                .good-price
                  p= val.price 
                .good-unit 
                  p= val.unit
    .new-goods-background
      .new-goods.container
        h1 Новые товары
          span 135 
        .all-list
          a(href="/catalog.html") Весь список
            span 
              img(src="/dist/img/strelka.svg")
        #newgoods
            each val in newfoods
              .good
                a(href="javascript:openProductDetail()")
                  .good-img 
                    img(src=val.img)
                  .good-text
                    p= val.text
                  .good-price-and-unit
                    .good-price
                      p= val.price
                    .good-unit 
                      p= val.unit
    .goods-viewed.container
      h1 Вы смотрели
        span 75
      .all-list
        a(href="/catalog.html") Весь список
          span
            img(src="/dist/img/strelka.svg")
      #viewedProducts
        each val in viewedfoods
          .good  
            a(href="javascript:openProductDetail()")
              .good-img 
                img(src=val.img)
              .good-text
                p= val.text
              .good-price-and-unit
                .good-price
                  p= val.price
                .good-unit
                  p= val.unit
    .customer-reviews-background
      .customer-reviews.container
        h1 Отзывы покупателей
        #reviews 
          each val in reviews
            .review 
              .review-text
                p= val.text
              .review-data 
                .review-img
                  img(src=val.photo)
                .name-and-url  
                  .name
                    p= val.name
                  .url
                    a(target="_blank" href="https://vk.com")= val.url
        .reviews-gradient
    .block-mobile-apps
      .headline
        h1 СКАЧАЙТЕ МОБИЛЬНОЕ ПРИЛОЖЕНИЕ
        p И узнавайте о скидках первыми!
      .google-and-apple
        a(href="")
          img(src="dist/img/google-play-badge.svg")
        a(href="")
          img(src="dist/img/app-store-badge.svg")

  

  include include/modal.pug
  
  include include/footer.pug 
