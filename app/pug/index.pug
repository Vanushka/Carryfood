              .good-price-and-unit
                .good-price
                  p= val.price
                .good-unit
                  p= val.unit
    .customer-reviews-background
      .customer-reviews.container
        h1 Отзывы покупателей
        #reviews
          each val in reviews
            .review
              .review-text
                p= val.text
              .review-data
                .review-img
                  img(src=val.photo)
                .name-and-url
                  .name 
                    p= val.name
                  .url
                    a(target="_blank" href="https://vk.com")= val.url
        .reviews-gradient
    .block-mobile-apps
      .headline 
        h1 СКАЧАЙТЕ МОБИЛЬНОЕ ПРИЛОЖЕНИЕ
        p И узнавайте о скидках первыми!
      .google-and-apple
        a(href="https://play.google.com/store" target="_blank")
          img(src="./dist/img/google-play-badge.svg")
        a(href="https://www.apple.com/ru/ios/app-store/" target="_blank")
          img(src="./dist/img/app-store-badge.svg")

  
