doctype html
html
  include include/variables.pug
  include include/header.pug
  body
    #slider-present
      each slide in slidercontent
        .slide-present
          img(src=slide.img)
          .slider-content
            h1= slide.h1
            p= slide.p
    .goods.container
      h1 Товары со скидкой
      #goods-slider 
        each val in food
          .good
            a(href="javascript:openProductDetail()")
              .good-img 
                img(src=val.img)
              .good-text
                p= val.text
              .good-price-and-unit
                .good-price
                  p= val.price
                .good-unit
                  p= val.unit
    .new-goods-background
      .new-goods.container
        h1 Новые товары
          span 135
        .all-list
          a(href="catalog.html") Весь список
            span
              img(src="./dist/img/strelka.svg")
        #newgoods
            each val in newfoods
              .good
                a(href="javascript:openProductDetail()")
                  .good-img 
                    img(src=val.img)
                  .good-text
                    p= val.text
                  .good-price-and-unit
                    .good-price
                      p= val.price
                    .good-unit 
                      p= val.unit
    .new-goods-background-mobile
