doctype html
html
  include include/variables.pug
  include include/header.pug
  body 
    #slider-present
    .goods.container
      h1 Товары со скидкой
      #goods-slider
        each val in good
          .good
            a(href="#")
              .good-img 
                img(src=val.img)
              .good-text
                p= val.text
              .good-price-and-unit
                .good-price
                  p= val.price
                .good-unit
                  p= val.unit
    .new-goods-background
      .new-goods.container
        h1 Новые товары
          span 135
        .all-list
          a(href="#") Весь список
            span >
        #newgoods
            each val in newgoods
              .good
                a(href="#")
                  .good-img 
                    img(src=val.img)
                  .good-text
                    p= val.text
                  .good-price-and-unit
                    .good-price
                      p= val.price
                    .good-unit
                      p= val.unit
    .goods-viewed.container
      h1 Вы смотрели
        span 75
      .all-list
        a(href="#") Весь список
          span >
      #viewedProducts
        each val in viewedgoods
          .good  
            a(href="#")
              .good-img 
                img(src=val.img)
              .good-text
                p= val.text
              .good-price-and-unit
                .good-price
                  p= val.price
                .good-unit
                  p= val.unit
    .customer-reviews-background
      .customer-reviews.container
        h1 Отзывы покупателей
        #reviews
          each val in reviews
            .review 
              .review-text
                p= val.text
              .review-data 
                .review-img
                  img(src=val.photo)
                .name-and-url
                  .name
                    p= val.name
                  .url
                    a(href="#")= val.url
    .block-mobile-apps
      .headline
        h1 СКАЧАЙТЕ МОБИЛЬНОЕ ПРИЛОЖЕНИЕ
        p И узнавайте о скидках первыми!
      .google-and-apple
        a(href="")
          .google-badge
            img(src="dist/img/google-play-badge.svg")
        a(href="")
          .apple-badge 
            img(src="dist/img/app-store-badge.svg")

  include include/footer.pug 
