doctype html
html
  include include/variables.pug
  include include/header.pug
  body 
    .filter-block
      .bread-crumbs 
        a(href="#") Каталог
        span >
        a(href="#") Продукты питания
        span >
      .filter
        h1 БЕЗАЛКОГОЛЬНЫЕ НАПИТКИ И СОКИ
        .hashtags
          .hashtag
            a(href="#") Кефир
              .close
          .hashtag
            a(href="#") Молоко
              .close
          .hashtag.active
            a(href="#") Вода
              .close
          .hashtag
            a(href="#") Кефир
              .close
          .hashtag
            a(href="#") Молоко
              .close
          .hashtag
            a(href="#") Вода
              .close
      .filter-line
        a.filter-button(href="#") Фильтер
        .sorts-block
          p Сортировать:
          a(href="#") Дешевле
          a(href="#") Дороже
          a.active(href="#") Популярное
    .new-goods-background
    .filter-food.container
      #filterProducts
        each val in foodgoods
          .food  
            a(href="#")
              .food-img 
                img(src=val.img)
              .food-text
                p= val.text
              .food-price-and-unit
                .food-price
                  p= val.price
                .food-unit
                  p= val.unit
    .foods-background
      .foods.container
        h1 Вы смотрели
        #foodSlider
          each val in good
            .food
              a(href="#")
                .food-img 
                  img(src=val.img)
                .food-text
                  p= val.text
                .food-price-and-unit
                  .food-price
                    p= val.price
                  .food-unit
                    p= val.unit

  include include/footer.pug 
